[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
	signingKey = <%= print("Your PGP Signing Key ID: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	co = checkout
	sh = show --pretty=fuller
	cp = cherry-pick -x
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vim
	autocrlf = input
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[diff]
	algorithm = patience
[push]
	default = nothing
[commit]
	gpgsign = true
[tag]
	gpgsign = true
